<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Phone</th>
      <th>Postcode</th>
      <th>Rating</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= link_to "#{profile.user_name}", profile %></td>
        <td><%= profile.phone %></td>
        <td><%= profile.postcode %></td>
        <td><%= profile.rating %></td>
        <td><%= profile.user.email %></td>
        <% if current_user.admin == true %>
          <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
          <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>