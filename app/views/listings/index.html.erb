<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Product price</th>
      <th>Product description</th>
      <th>Product image</th>
      <th>Product duration</th>
      <th>Order status</th>
      <th>User name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.product_name %></td>
        <td><%= listing.product_price %></td>
        <td><%= listing.product_description %></td>
        <td><%= listing.product_image %></td>
        <td><%= listing.product_duration %></td>
        <td><%= listing.order_status %></td>
        <td><%= listing.user_name %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

