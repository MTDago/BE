<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<!-- Creates an order containing the current listing -->
<%= form_with(controller: 'order', action: 'new', listing_id: @listing.id, method: 'post') do |form|%>
    <%= form.number_field :duration, value: 1 %>
    <div><%= submit_tag 'Order' %></div>
<% end %>